@model Cadasvan01.Models.Usuario

@{
    ViewData["Title"] = "Excluir Motorista";
}

<h1>Excluir Motorista</h1>

<p>Tem certeza de que deseja excluir o perfil de @Model.Nome @Model.Sobrenome?</p>

<form asp-area="Admin" asp-controller="AdminListaMotoristas" asp-action="DeletarConfirmado">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>


<div>
    <a asp-area="admin" asp-controller="admin" asp-action="Index">Voltar para a Lista</a>
</div>