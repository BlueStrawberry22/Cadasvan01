@model IEnumerable<Cadasvan01.Models.Usuario>

@{
    ViewData["Title"] = "Alunos";
}

<h1>Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.NomeCompleto</td>
                <td>@user.Endereco</td>
                <td>
                    @if (user.Cidade != null){
                        @user.Cidade.Nome
                    }
                    else{
                        <span class="text-danger">Cidade não encontrada</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>