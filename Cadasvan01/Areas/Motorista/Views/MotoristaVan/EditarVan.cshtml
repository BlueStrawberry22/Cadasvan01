@model Cadasvan01.ViewModel.MotoristaVanViewModel

<h2>Editar Van</h2>

<form asp-action="EditarVan">
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cor"></label>
        <input asp-for="Cor" class="form-control" />
        <span asp-validation-for="Cor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Placa"></label>
        <input asp-for="Placa" class="form-control" />
        <span asp-validation-for="Placa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" type="file" class="form-control" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>
    @if (Model.CaminhoFotoVan != null)
    {
        <div class="form-group">
            <img src="@Model.CaminhoFotoVan" alt="Van Image" style="max-width: 300px; max-height: 300px;" />
        </div>
    }
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
