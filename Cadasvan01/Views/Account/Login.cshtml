@model Cadasvan01.ViewModel.LoginViewModel


<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login-register.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>

    <div class="wrapper login">
        <form method="post">
            <h1>Login</h1>
            <div class="input-box">
                <input asp-for="Email" type="text" placeholder="E-mail" required>
                <i class="bx bxs-user"></i>
            </div>
            <div class="input-box">
                <input asp-for="Senha" type="password" placeholder="Senha" required>
                <i class="bx bxs-lock-alt"></i>
            </div>

            <div class="remember-forgot">
                <label asp-for="RememberMe"><input asp-for="RememberMe" type="checkbox">@Html.DisplayNameFor(m => m.RememberMe)</label>
                <a href="#">Esqueceu a senha?</a>
            </div>

            <button type="submit" class="btn">Login</button>


        </form>
    </div>
</body>
</html>


