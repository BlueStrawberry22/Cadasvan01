@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = UserManager.GetUserAsync(User).Result;
        var userRole = UserManager.GetRolesAsync(user).Result.FirstOrDefault();

        <li class="nav-item">
            <a class="nav-link" href="#">
                <box-icon name='bell' type='solid' color="white"></box-icon>
            </a>
        </li>

        <li class="nav-item dropdown">
            @{
                string profileImageUrl;
                if (string.IsNullOrEmpty(user.CaminhoImagemPerfil))
                {
                    profileImageUrl = Url.Content("~/images/default-profile.jpg");
                }
                else
                {
                    profileImageUrl = Url.Content(user.CaminhoImagemPerfil);
                }
            }
            <a class="nav-link" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="@profileImageUrl" class="rounded-circle" width="40" height="40" alt="Profile Image" />
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                @if (userRole == "Motorista")
                {
                    <a class="dropdown-item" asp-area="Motorista" asp-controller="MotoristaPerfil" asp-action="Edit">Gerenciar conta</a>
                }
                else if (userRole == "Aluno")
                {
                    <a class="dropdown-item" asp-area="Aluno" asp-controller="AlunoPerfil" asp-action="Edit">Gerenciar conta</a>
                }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </li>
    }
</ul>

<style>
    .nav-link {
        color: white !important;
    }

        .nav-link:hover {
            color: #ddd !important;
        }

    .dropdown-menu {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .dropdown-item {
        color: #333;
        padding: 0.7rem;
        text-align: center;
    }

        .dropdown-item:hover {
            color:white;
            background-color: #f6944e;
        }

    .dropdown-toggle::after {
        display: none;
    }

    .nav-item .dropdown-menu {
        display: none;
        position: absolute;
        right: 0;
        top: 60px;
        min-width: 200px;
        transition: all 0.3s ease;
    }

    .nav-item:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu-right {
        right: 0;
        left: auto;
    }
</style>
