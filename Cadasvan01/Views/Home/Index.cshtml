@{
    ViewData["Title"] = "Home Page";
}

<div class="container home-container">
    <div class="card home-card">
        <div class="card-header">
            <img src="~/images/CadasvanLoginLogo.jpg" alt="Cadasvan Logo" class="card-logo">
        </div>
        <div class="buttons">
            <a href="/Account/Register" class="btn btn-primary">Primeiro acesso? Cadastre-se</a>
            <span class="separator">OU</span>
            <a href="/Account/Login" class="btn btn-secondary">Já tem cadastro? Entrar</a>
        </div>
    </div>
</div>

<style>
    /* Container */
    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f5f5f5; /* Adjust background color to match the image */
    }

    /* Card */
    .home-card {
        background-color: white;
        padding: 2em;
        border-radius: 1em;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        height: 60%;
        max-width: 400px;
        width: 100%;
        position: relative;
    }

        .home-card .card-header {
            position: relative;
            margin-bottom: 1em;
        }

        .home-card .card-logo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1em;
        }

    .buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .buttons .btn {
            text-decoration: none;
            display: block;
            width: 100%;
            padding: 0.75em;
            border-radius: 0.5em;
            margin-bottom: 1em;
            font-size: 1.2em;
            text-align: center;
            color: white;
            transition: background-color 0.3s;
        }

    .btn-primary {
        background-color: #ff6600;
    }

        .btn-primary:hover {
            background-color: #e65c00;
        }

    .btn-secondary {
        background-color: white;
        color: #ff6600;
        border: 2px solid #ff6600;
    }

        .btn-secondary:hover {
            background-color: #ff6600;
            color: white;
        }

    .separator {
        margin: 1em 0;
        color: gray;
    }

    /* Background circles */
    .home-card::before, .home-card::after {
        content: '';
        position: absolute;
        width: 300px;
        height: 300px;
        background-color: #ff6600;
        border-radius: 50%;
        opacity: 0.3;
        z-index: -1;
    }

    .home-card::before {
        top: -150px;
        left: -150px;
    }

    .home-card::after {
        bottom: -150px;
        right: -150px;
    }
</style>
